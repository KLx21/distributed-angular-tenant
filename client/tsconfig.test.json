{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "..",
    "baseUrl": ".",
    "outDir": "../tmp/src",
    "target": "ES5",
    "module": "Commonjs",
    "noImplicitAny": false,
    "sourceMap": true,
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": false,
    "declaration": false,
    "removeComments": false,
    "typeRoots": [
      "node_modules/@types",
      "node_modules"
    ],
    "types": [
      "jasmine",
      "node",
      "systemjs"
    ],
    "lib": [
      "es2018",
      "es2017",
      "es2016",
      "es2015",
      "dom",
      "es5"
    ]
  },
  "include": [
    "client/src/**/*.spec.ts"
  ]
}
